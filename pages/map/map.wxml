<view class="map_container"> 
  <map class="map" id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="14" show-location="true" markers="{{markers}}" bindmarkertap="makertap"></map> 
</view> 
<view class="place_info"> 
  <text>{{placeData.title}}</text> 
  <text>{{placeData.address}}</text> 
  <text>{{placeData.telephone}}</text> 
</view> 

<view class='imageicon'>
  <image class="icon-image" src="../../images/home.png" bindtap='clickHotel'/>
  <image class="icon-image" src="../../images/lollipop.jpg" bindtap='clickFood'/>
  <image class="icon-image" src="../../images/wallpaper.jpg" bindtap='clickService'/>
</view>
<view class='imagetext'>
  <view>酒店</view>
  <view>美食</view>
  <view>服务</view>
</view>
