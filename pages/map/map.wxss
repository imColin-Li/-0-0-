.icon-image{
  width:100rpx;
  height:100rpx;
  margin: 80rpx 60rpx 0rpx 85rpx;
}

.imagetext{
  margin: 0 10rpx 10rpx 10rpx;
  color:  #666;
  font-size:15px;
  display: flex;
  flex-direction: row;
  justify-content:space-around;
}
.map_container{ 
    height: 300px; 
    border: 2rpx solid #ffc70f;
    border-radius: 10px;
    margin-left: 10rpx;
    margin-right: 10rpx;
    margin-top: 20rpx;
    padding: 10rpx 10rpx;
} 
.map { 
    height: 120%; 
    width: 100%; 
} 
.place_info{
  height: 100%;
  display:flex;
  flex-direction:column;
  box-sizing:border-box;
  padding:15rpx 15rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top:120rpx;
  color:  rgb(0, 0, 0);
  font-size:24px;
  background-color:#eccaca;
}